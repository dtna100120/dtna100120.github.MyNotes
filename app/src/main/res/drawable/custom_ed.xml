<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set màu nền-->
    <solid
        android:color="@color/colorBackgroundSearch" >
    </solid>

    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="0dp"
        android:color="#9C9C9C" >
    </stroke>

    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:left="30dp"
        android:top="12dp"
        android:right="30dp"
        android:bottom="12dp" >
    </padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="10dp" >
    </corners>

</shape>